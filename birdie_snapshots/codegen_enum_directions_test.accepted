import decode
import gleam/json

pub type Data {
  Up
  Down
  Left
  Right
}

pub fn data_decoder() -> decode.Decoder(Data) {
  decode.then(decode.string, fn(s) {
    case s {
      "UP" -> decode.into(Up)
      "DOWN" -> decode.into(Down)
      "LEFT" -> decode.into(Left)
      "RIGHT" -> decode.into(Right)
      _ -> decode.fail(Data)
    }
  })
}

pub fn data_to_json(data: Data) -> json.Json {
  json.string(case data {
    Up -> "UP"
    Down -> "DOWN"
    Left -> "LEFT"
    Right -> "RIGHT"
  })
}